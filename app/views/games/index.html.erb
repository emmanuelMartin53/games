<div class="card" aria-labelledby="games-title">
  <h1 id="games-title" class="card-title">Mes jeux</h1>

  <% @games.each do |game| %>
    <div class="card-game" aria-label="<%= "Fiche du jeu #{game.title}" %>">
      <div class="card-game-header">
        <h2 class="card-game-title"><%= game.title %></h2>
        <p class="card-game-type"><%= game.type_game %></p>
      </div>

      <div class="card-game-body">
        <p class="description"><%= sanitize(game.description) %></p>
        <ul class="card-game-details">
          <li><%= pluralize(game.min_player, 'joueur') %></li>
          <li>Âge minimum : <%= game.min_age %> ans</li>
          <li>Date de sortie : <%= game.exit_date.strftime("%d-%b-%Y") %></li>
          <li class="card-game-pricing"><%= number_to_currency(game.price, unit: "€", format: "%n %u") %></li>
        </ul>
      </div>

      <div class="card-game-footer">
        <%= link_to game.studio.name,
                    game.studio.internet_site,
                    class: "btn btn-gradient",
                    target: :_blank,
                    rel: "noopener",
                    aria: { label: "Site de #{game.studio.name}" } %>
      </div>
    </div>
  <% end %>

  <div class="card-buttons">
    <%= link_to "Accéder aux plateformes", platforms_path, class: "btn btn-platform", aria: { label: "Voir les plateformes de jeux" } %>
    <%= link_to "Ajouter un jeu", new_game_path, class: "btn btn-add", aria: { label: "Ajouter un nouveau jeu" } %>
  </div>
</div>
