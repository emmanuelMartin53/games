<h1 class="text-center fw-bold text-black p">Ajouter un Studio de développement</h1>
<div class="container py-4 margin-bottom-10">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <%= simple_form_for @studio do |f| %>
              <%= f.input :name, label: "Nom"%>
              <%= f.input :internet_site, label: "Site internet" %>
              <%= f.input :postal_address, label: "Adresse postale" %>
              <%= f.input :origin_country, as: :select, collection: ["France", "Etats-Unis","Japon","Canada","Royaume-Uni", "Chine", "Corée du Sud", "Pays-Bas", "Pologne"], prompt: "Choisis un pays" ,label: "Pays" %>
              <%= f.association :builder, label: "Constructeur (optionnel)", prompt: "Indépendant", collection: Builder.all, include_blank: true %>
              <div class="d-grid gap-2 mt-3 py-3">
                  <%= f.button :submit, "Ajouter", class: "btn btn-flat text-white py-3 rounded-pill" %>
              </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

<% if @studio.errors.any? %>
  <div class="alert alert-danger">
    <h4>Des erreurs ont empêché l'enregistrement :</h4>
    <ul>
      <% @studio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
